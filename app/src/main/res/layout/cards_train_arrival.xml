<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_train_arrival"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        app:cardCornerRadius="10dp">
        <RelativeLayout
            android:id="@+id/train_arrival_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="10dp">
            <TextView
                android:id="@+id/station_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:gravity="center"
                android:maxLines="2"/>
            <TextView
                android:id="@+id/platform_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_below="@id/station_title"
                android:layout_marginTop="10dp"
                android:maxLines="2"/>
            <TextView
                android:id="@+id/platform_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/platform_1"
                android:layout_marginTop="5dp"
                android:textSize="18sp"
                android:gravity="center"
                android:maxLines="2"/>
            <TextView
                android:id="@+id/platform_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/platform_2"
                android:layout_marginTop="5dp"
                android:textSize="18sp"
                android:gravity="center"
                android:maxLines="2"/>
            <TextView
                android:id="@+id/platform_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/platform_3"
                android:layout_marginTop="5dp"
                android:textSize="18sp"
                android:gravity="center"
                android:maxLines="2"/>
            <TextView
                android:id="@+id/platform_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/platform_4"
                android:layout_marginTop="5dp"
                android:textSize="18sp"
                android:gravity="center"
                android:maxLines="2"/>
            <TextView
                android:id="@+id/platform_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/platform_5"
                android:layout_marginTop="5dp"
                android:textSize="18sp"
                android:gravity="center"
                android:maxLines="2"/>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>